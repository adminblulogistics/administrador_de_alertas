</script>
<style>
    .table hr {
        margin: unset !important;
    }
</style>
<div class="row-fluid panel_buscador">
    <div class="col-md-12 bg-primary-custom">
        <div class="titulo">Resultado de la busqueda</div>
    </div>
</div>

<div id="integraciones" class="" style="clear:both;padding-top:15px;">

    <div class="" id="content_integracion">
        <div class="content_menu_grilla"> 

        </div>
        <table id="list_buscador" class="table table-striped table-bordered" cellspacing="0" style="width:100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Identificación</th>
                    <th>Comercial</th>
                    <th>Sale Support</th>
                    <th>Ejecutivo de cuenta</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{

                    foreach (var org in Model.Listaorganizaciones)
                    {
                        <tr>
                            <td>@org.ID</td>
                            <td>@org.NAME.Replace("_", " ")</td>
                            <td>@org.IDENTIFICACION</td>
                            <td>@org.COMERCIAL</td>
                            <td>@org.SALESUPPORT</td>
                            <td>@org.EJECUTIVO</td>
                            <td>
                                <center>
                                    <a href="javascript:verDetalleCliente('@org.ID');" title="Detalles">Detalles<i class=""></i></a>
                                </center>
                            </td>                            
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


