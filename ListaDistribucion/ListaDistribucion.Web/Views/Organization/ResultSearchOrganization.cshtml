@model ListaDistribucion.Web.Models.Organization.OrganizationModel
@{ Layout = null; }

<script type="text/javascript">

    $(document).ready(function () {
        oTable = $('#list_buscador').dataTable({
            "pagingType": "full_numbers", "bStateSave": false, "iDisplayLength": 50,
            "bSort": false
        });
    });

    function verDetalleCliente(cliente) {

        var objData = validarRegistrosSeleccionados('check_customer');

        //////if (objData.idRegistroSeleccionado != 0) {

            loader();

            $("#content_integracion").load(pathToAction() + '/Organization/ViewOrganization', { idCliente: cliente }, function () {
                loader();
                $(".buscador").hide();
                $(".titulo_resultado_busqueda").hide();
                $("#integraciones .content_menu_grilla").hide();
            });
        //}
        //else
